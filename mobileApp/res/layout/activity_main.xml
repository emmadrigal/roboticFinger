<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tec.emadrigal.keycode.MainActivity">

    <LinearLayout
        android:fillViewport="true"
        android:layout_width="387dp"
        android:layout_height="505dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/keyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KeyCode"
            android:textSize="25sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/insertedKeyCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Inserted Keycode" />

        <TableLayout
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="53dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:text="1"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="299dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="2"
                    tools:layout_editor_absoluteX="122dp"
                    tools:layout_editor_absoluteY="240dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="3"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="26dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:text="4"
                    tools:layout_editor_absoluteX="33dp"
                    tools:layout_editor_absoluteY="399dp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="5"
                    tools:layout_editor_absoluteX="122dp"
                    tools:layout_editor_absoluteY="319dp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="6"
                    tools:layout_editor_absoluteX="165dp"
                    tools:layout_editor_absoluteY="125dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:text="7"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="255dp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="8"
                    tools:layout_editor_absoluteX="93dp"
                    tools:layout_editor_absoluteY="312dp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="9"
                    tools:layout_editor_absoluteX="173dp"
                    tools:layout_editor_absoluteY="399dp" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="0"
                    tools:layout_editor_absoluteX="173dp"
                    tools:layout_editor_absoluteY="399dp" />
            </TableRow>

        </TableLayout>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Layout 1"
                android:onClick="onRadioButtonClicked"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="327dp" />

            <RadioButton
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Layout 2"
                android:onClick="onRadioButtonClicked"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="426dp" />

            <RadioButton
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Layout 3"
                android:onClick="onRadioButtonClicked"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="394dp" />

        </RadioGroup>

        <Button
            android:id="@+id/newKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate new Keycode" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
